@model IEnumerable<IS.Models.Title>

@{ ViewBag.Title = "Index";
				Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Titles List</h2>

<p>
	@Html.ActionLink("Add", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-danger btn-justified ", @role = "button" })
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.TitleName)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.TitleName)
	</td>
	<td>
		@Html.ActionLink("Edit", "Edit", new { id = item.TitleId }) |
		@Html.ActionLink("Details", "Details", new { id = item.TitleId }) |
		@Html.ActionLink("Delete", "Delete", new { id = item.TitleId })
	</td>
</tr>}

</table>
